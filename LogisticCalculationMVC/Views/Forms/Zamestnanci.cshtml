@model EmployeeWorkplaceModel
@{
    ViewData["Title"] = "Zamestnanci";
}

<div class="container my-5">
    <div class="row">
        <!-- Employee Table Section -->
        <div class="col-md-6">
            <h2 class="mb-4">Employee Table</h2>
            <table id="employeeTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>name</th>
                        <th>Surname</th>
                        <th>birth</th>
                        <th>job</th>
                        <th>workplace</th>
                        <th>workplace nav</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model.Employees)
                    {
                        <tr>
                            <td>@employee.Id</td>
                            <td>@employee.Name</td>
                            <td>@employee.Surname</td>
                            <td>@employee.Birth</td>
                            <td>@employee.Job</td>
                            <td>@employee.WorkplaceName</td>
                            <td>@employee.WorkplaceNavigation</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- Workplace Table Section -->
        <div class="col-md-6">
            <h2 class="mb-4">Workplace table</h2>
            <table id="workplaceTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>WorkplaceName</th>
                        <th>City</th>
                        <th>Street</th>
                        <th>Psc</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Number of employees</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model.Workplaces)
                    {
                        <tr>
                            <td>@employee.Id</td>
                            <td>@employee.WorkplaceName</td>
                            <td>@employee.City</td>
                            <td>@employee.Street</td>
                            <td>@employee.Psc</td>
                            <td>@employee.Email</td>
                            <td>@employee.Phone</td>
                            <td>@employee.EmployeeCount</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
